doctype html
title Class
meta(name='viewport' content='width=device-width, initial-scale=1')
link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
.w3-container

  h1= `Classe ${data.codigo}` 
  h2= `${data.titulo}`

  p= `${data.descricao}`

  p
    b=`Status: ${data.status}`
  p
    b=`Nivel: ${data.nivel}`


  h3 Processos Descendentes:
  table.w3-table.w3-striped.w3-border
    - var i = 0;
    each val in data.filhos
      if i == 0
        - i = 1;
        tr
          th ID
          th Status
          th Codigo
          th Titulo
      tr
        td= val.id
        td= val.status
        td
          a(href=`/classes/c${val.codigo}`)= val.codigo
        td= val.titulo
    else
        p
          i Não há processos descendentes

  if data.nivel == 3
    
    h3 Termos de Indice:
    table.w3-table.w3-striped.w3-border
      - var i = 0;
      each val in data.termosInd
        if i == 0
          - i = 1;
          tr
            th ID TI
            th termo
        
          tr
            td= val.idTI
            td
              a(href=`/terms_index`)=  val.termo
      else
        p
          i Não há termos

  a(href='/')
    button.w3-button.w3-xlarge Home